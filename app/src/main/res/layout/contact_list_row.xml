<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/contact_root"
    android:weightSum="5"
    android:padding="8dp"
    android:id="@+id/linearLayout_contact_root">
    <ImageView
        android:id="@+id/imageView_contact"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:src="@drawable/friendship_2"
        android:scaleType="fitXY"
        android:background="#00525252"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">
        <TextView
            android:id="@+id/textView_contact_name"
            android:text="Mr. Bean"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="2">
            <ImageButton
                android:id="@+id/imageButton_call"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/phone_call"
                android:scaleType="fitXY"
                android:background="#00525252"
                android:layout_margin="15dp"/>
            <ImageButton
                android:id="@+id/imageButton_message"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/mail"
                android:scaleType="fitXY"
                android:background="#00525252"
                android:layout_margin="15dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>